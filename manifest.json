{
    "manifest_version": 2,
    "name": "SecNav",
    "default_locale": "ca",
    "version": "0.1",
    "description": "Intenta millorar la teva seguretat al navegar per la web.",
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "*://*/*",
        "downloads",
        "tabs",
        "activeTab"
    ],
    "background": {
        "scripts": [
            "background/constants.js",
            "background/import/import.js",
            "background/export/export.js",
            "background/logger/initial.js",
            "background/logger/items.js",
            "background/logger/logger.js",
            "background/popup-controller.js",
            "background/urls/initial.js",
            "background/urls/items.js",
            "background/urls/urls.js",
            "background/download/items.js",
            "background/download/initial.js",
            "background/page/items.js",
            "background/page/initial.js",
            "background/download/download.js",
            "background/page/page.js",
            "background/controller.js",
            "background/initial.js"
        ],
        "persistent": true
    },
    "content_scripts": [{
        "matches": [
            "*://*/*"
        ],
        "all_frames": true,
        "css": [
            "css/bootstrap.min.css",
            "css/mdb.lite.min.css"
        ],
        "js": [
            "js/jquery.min.js",
            "js/bootstrap.min.js",
            "js/mdb.min.js",
            "background/constants.js",
            "js/utils.js",
            "content-scripts/popup.js"
        ]
    }],
    "options_page": "options/options.html",
    "icons": {
        "16": "secnav16.ico",
        "48": "secnav48.ico",
        "128": "secnav128.ico"
    },
    "browser_action": {
        "default_icon": "secnav128.png",
        "default_popup": "popup/popup.html"
    }
}