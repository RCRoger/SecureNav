{
  "manifest_version": 2,
  "name": "SecNav",
  "default_locale": "ca",
  "version": "0.1",
  "description": "Intenta millorar la teva seguretat al navegar per la web.",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*/*",
    "downloads",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background/constants.js",
      "background/urls/initial.js",
      "background/urls/items.js",
      "background/download/items.js",
      "background/download/initial.js",
      "background/initial.js",
      "background/download/download.js",
      "background/controller.js"
    ],
    "persistent": true
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "secnav16.ico",
    "48": "secnav48.ico",
    "128": "secnav128.ico"
  },
  "browser_action": {
    "default_icon": "secnav128.png",
    "default_popup": "popup/popup.html"
  }
}